<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
 http://www.springframework.org/schema/security
 http://www.springframework.org/schema/security/spring-security-3.2.xsd">
    
    <beans:bean id="dataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">

        <beans:property name="driverClassName" value="com.mysql.jdbc.Driver" />
        <beans:property name="url" value="jdbc:mysql://localhost:3306/virtualrealitygladiator" />
        <beans:property name="username" value="root" />
        <beans:property name="password" value="root" />
    </beans:bean>
    
    <authentication-manager>
        <authentication-provider>
            <!--            <user-service>-->
            <jdbc-user-service data-source-ref="dataSource"
                
                    users-by-username-query="
                    SELECT UserName, UserPassword,
                      CASE ENABLED WHEN 1 THEN 'true' ELSE 'false' END 'ENABLED'
                    FROM users
                    WHERE UserName=?;" 
                    
                    authorities-by-username-query="
                    SELECT UserName, Authority
                    FROM users
                    WHERE UserName=?"
                
            />
            <!--                <user name="user" 
                      password="user" 
                      authorities="ROLE_USER" />
                <user name="admin" 
                      password="admin" 
                      authorities="ROLE_USER, ROLE_ADMIN" />
            </user-service>-->
        </authentication-provider>
    </authentication-manager>
    
    <http pattern="/login" security="none" />
    <http pattern="/css/**" security="none" />
    <http pattern="/img/**" security="none" />
    <http pattern="/js/**" security="none" />
    <http pattern="/fonts/**" security="none" />
    <http auto-config="true">
        <form-login login-processing-url="/j_spring_security_check"
                    authentication-failure-url="/index?login_error=1"/>
        
        <intercept-url pattern="/"
                       access="IS_AUTHENTICATED_ANONYMOUSLY"/>     
        <intercept-url pattern="/index" 
                       access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <intercept-url pattern="/static/**" 
                       access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <intercept-url pattern="/category/**" 
                       access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <intercept-url pattern="/search/**" 
                       access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <intercept-url pattern="/blog/**" 
                       access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <intercept-url pattern="/displayBlogsByTag/**" 
                       access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <intercept-url pattern="/addComment/**" 
                       access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <intercept-url pattern="/editorDashboard/**" 
                       access="ROLE_EDITOR, ROLE_ADMIN"/>
        <intercept-url pattern="/editBlog/**" 
                       access="ROLE_EDITOR, ROLE_ADMIN"/>
        <intercept-url pattern="/displayCreateBlog/**" 
                       access="ROLE_EDITOR, ROLE_ADMIN"/>
        <intercept-url pattern="/displayEditBlog/**" 
                       access="ROLE_EDITOR, ROLE_ADMIN"/>
        <intercept-url pattern="/flagComment/**" 
                       access="ROLE_MODERATOR, ROLE_ADMIN"/>
        <intercept-url pattern="/blogAdmin" 
                       access="ROLE_ADMIN"/>
        <intercept-url pattern="/postBlog/**"
                       access="ROLE_EDITOR, ROLE_ADMIN"/>
        <intercept-url pattern="/deleteBlog/**"
                       access="ROLE_EDITOR, ROLE_ADMIN"/>
        <intercept-url pattern="/cancelEdit/**"
                       access="ROLE_EDITOR, ROLE_ADMIN"/>
        <intercept-url pattern="/blogs/**"
                       access="ROLE_EDITOR, ROLE_ADMIN"/>
        <intercept-url pattern="/rejectedBlogs/**"
                       access="ROLE_EDITOR, ROLE_ADMIN"/>
        <intercept-url pattern="/pendingBlogs/**"
                       access="ROLE_EDITOR, ROLE_ADMIN"/>
        <!--        <intercept-url pattern="/admin" 
        access="ROLE_ADMIN"/>        -->
        <intercept-url pattern="/**"
                       access="ROLE_ADMIN"/> 
    </http>
    
    <beans:bean id="webexpressionHandler" 
                class="org.springframework.security.web.access.expression.DefaultWebSecurityExpressionHandler"/>
</beans:beans>